{
  "name": "@funboxteam/crafter",
  "version": "3.6.0",
  "description": "JavaScript replacement of Drafter library for parsing API Blueprint documentation format",
  "main": "Crafter.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "regenerate-fixtures": "node ./scripts/regenerate-fixtures.js",
    "lint": "eslint --cache -c .eslintrc --ext .js ./",
    "prepublishOnly": "lawyer"
  },
  "keywords": [
    "drafter",
    "api",
    "blueprint",
    "doc",
    "snowcrash",
    "protagonist",
    "aglio"
  ],
  "bin": {
    "crafter": "./cli.js"
  },
  "devDependencies": {
    "@funboxteam/eslint-config": "7.1.0",
    "api-elements": "0.2.2",
    "eslint": "7.32.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^26.6.3",
    "jest-junit": "12.0.0"
  },
  "dependencies": {
    "commander": "2.15.1",
    "commonmark": "0.30.0",
    "fast-deep-equal": "2.0.1",
    "yamljs": "0.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "tests"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "html",
      "text",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
