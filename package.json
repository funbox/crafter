{
  "name": "@funbox/crafter",
  "version": "1.3.0",
  "description": "JavaScript replacement of Drafter library for parsing API Blueprint documentation format",
  "main": "Crafter.js",
  "scripts": {
    "test": "jest",
    "test-drafter": "jest ./tests/drafterFixtures.test.js --config={}",
    "regenerate-fixtures": "node ./scripts/regenerate-fixtures.js",
    "lint": "eslint --cache -c .eslintrc --ext .js ./"
  },
  "keywords": [
    "drafter",
    "api",
    "blueprint",
    "doc",
    "snowcrash",
    "protagonist",
    "aglio"
  ],
  "bin": {
    "crafter": "./cli.js"
  },
  "devDependencies": {
    "@funboxteam/eslint-config": "4.8.0",
    "eslint": "5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.6.0"
  },
  "dependencies": {
    "commander": "2.15.1",
    "commonmark": "^0.28.1",
    "rimraf": "2.6.2",
    "yamljs": "0.3.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "drafterFixtures.test.js"
    ],
    "testEnvironment": "node",
    "roots": [
      "tests"
    ]
  }
}
